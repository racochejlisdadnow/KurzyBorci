---
interface Props {
  class?: string;
}

const { class: className } = Astro.props;
const year = new Date().getFullYear();
---

<footer
  class:list={["w-full mt-auto py-8 text-center relative z-10", className]}
>
  <div
    class="bg-white/80 backdrop-blur-md rounded-[20px] p-6 mx-auto max-w-4xl shadow-sm border border-white/20"
  >
    <p class="text-navy font-semibold mb-2">
      &copy; {year} Kurzy pro borce. Všechna práva vyhrazena.
    </p>
    <p class="text-sm text-navy/70">
      Made with <span class="text-magenta">♥</span> in Domašov.
    </p>
  </div>
</footer>
