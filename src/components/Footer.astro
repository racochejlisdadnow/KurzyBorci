---
interface Props {
  class?: string;
}

const { class: className } = Astro.props;
const year = new Date().getFullYear();
---

<footer
  class:list={["w-full mt-auto py-4 text-center relative z-50", className]}
>
  <div
    class="bg-white/85 backdrop-blur-xl rounded-xl p-3 mx-auto max-w-4xl shadow-sm border border-white/40"
  >
    <p class="text-navy font-semibold mb-1">
      &copy; {year} Kurzy pro borce. Všechna práva vyhrazena.
    </p>
    <p class="text-sm text-navy/70">
      Made with <span class="text-magenta">♥</span> in tvoje máma.
    </p>
  </div>
</footer>
